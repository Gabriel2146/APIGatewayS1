{
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/transactions/{everything}",
            "UpstreamPathTemplate": "/gateway/transactions/{everything}",
            "UpstreamHttpMethod": [ "Get", "Post" ],
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5031 // Puerto corregido para el servicio de transacciones
                }
            ],
            "DownstreamScheme": "http"
        },
        {
            "DownstreamPathTemplate": "/api/users/{everything}",
            "UpstreamPathTemplate": "/gateway/users/{everything}",
            "UpstreamHttpMethod": [ "Get", "Post" ],
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5032 // Puerto corregido para el servicio de usuarios
                }
            ],
            "DownstreamScheme": "http"
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:5033" // Puerto del API Gateway
    }
}
